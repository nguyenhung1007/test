{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@src": ["src"],
      "@src/*": ["src/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
